{
  "name": "desktop",
  "version": "0.0.0",
  "private": true,
  "author": "CodeForReal <codeforreal@outlook.com>",
  "homepage": "https://github.com/niraj-khatiwada/pnpm-monorepo",
  "main": "dist-electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"tsc -p tsconfig.node.json --watch\" \"pnpm next:dev\" \"pnpm electron:dev\" -c \"white.bold,blue.bold,green.bold\"",
    "serve": "pnpm next:build && tsc -p tsconfig.node.json && pnpm electron:serve",
    "build": "pnpm next:build && tsc -p tsconfig.node.json && pnpm electron:build",
    "next:dev": "next dev",
    "next:build": "next build",
    "electron:dev": "wait-on dist-electron/main.js tcp:3000 && electron .",
    "electron:serve": "electron .",
    "electron:build": "electron-builder --linux deb"
  },
  "dependencies": {
    "electron-serve": "1.3.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.53.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "concurrently": "^9.0.1",
    "electron": "^32.2.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "3.2.5",
    "tailwind-config": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5",
    "wait-on": "^8.0.1",
    "electron-builder": "^25.1.8",
    "@hey-api/client-fetch": "^0.4.1",
    "@tanstack/react-query": "^5.29.2",
    "axios": "^1.7.4",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18",
    "ui": "workspace:*"
  }
}
